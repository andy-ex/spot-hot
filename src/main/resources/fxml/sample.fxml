<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<GridPane fx:controller="by.bsu.spothot.controller.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">


        <Label text="Destination: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <Label text="File name: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>

        <TextField fx:id="destination" GridPane.rowIndex="0" GridPane.columnIndex="1"
                   minWidth="300"/>
        <TextField fx:id="folder" GridPane.rowIndex="1" GridPane.columnIndex="1"
                minWidth="300"/>

        <Button fx:id="download" alignment="CENTER" GridPane.columnIndex="0" GridPane.rowIndex="2"
                GridPane.columnSpan="2"
                text="Download content"
                onAction="#download"/>


</GridPane>